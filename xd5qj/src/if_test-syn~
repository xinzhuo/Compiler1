VAR myvar;

myvar=4;
VAR i;

//should be eight accending lines
i=0;
// should draw a rectangle
IF(myvar==4) {
    GO 40;
    TURN 90;
    GO 40;
    TURN 90;
    GO 40;
    TURN 90;
    GO 40;
    TURN 90;
}

// reset turtle position
JUMP 80;

//should take ELSE and draw a triangle
IF(myvar>=7) {
GO 40;
TURN 90;
GO 40;
TURN 90;
GO 40;
TURN 90;
GO 40;
TURN 90;
} 
ELSE{
GO 30;
TURN 120;
GO 30;
TURN 120;
GO 30;
TURN 120;
}


TURN 90;
WHILE(i<8) {
    GO 20;
    TURN 270;
    JUMP 5;
    TURN 90;
    i=i+1;
}
